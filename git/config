[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen%cr %C(blue)%an%Creset' --abbrev-commit
    slog = lg
[core]
    # editor = code -w
    editor = vim   # pico or vim are better than VS Code because it stays in the terminal
    excludesfile = /Users/dhochhauser/.config/git/gitignore_global
    fsmonitor = true
    hooksPath = ~/.config/git/git_template/hooks
    # pager = less -x4 -F
    pager = delta
[credential]
    helper = osxkeychain
[delta]    
    line-numbers = true
    light = true     # or light = true, or omit for auto-detection
    navigate = true  # use n and N to move between diff sections
	true-color = always
    tabs = 4
[diff]
    tool = code
[difftool]
    prompt = false
[difftool "kdiff3"]
    path = kdiff3
[difftool "sourcetree"]
    cmd = stree "$LOCAL" "$REMOTE"
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[difftool "code"]
    cmd = code --dir-diff --wait --diff $LOCAL $REMOTE
[fetch]
    prune = true
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
[grep]
    lineNumber = true
[gui]
    fontdiff = -family Menlo -size 14 -weight normal -slant roman -underline 0 -overstrike 0
    tabsize = 4
[interactive]
    diffFilter = delta --color-only
[merge]
    tool = kdiff3
    conflictstyle = zdiff3 # from Delta.  I don't know if I like this.
[mergetool]
    prompt = false
[mergetool "kdiff"]
    path = kdiff3
[mergetool "sourcetree"]
    cmd = /Users/dhochhauser/Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
    trustExitCode = true
[pull]
    # rebase = true # This sucks because it won't let you pull if there are local changes
[rerere]
    enabled = true
# This should be last.  It is for settings specific to the local machine that should
# not be committed.
[include]
    path = config_local
